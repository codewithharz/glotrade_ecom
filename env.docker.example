# Docker Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to git!

# Node Environment
NODE_ENV=production

# MongoDB
MONGO_ROOT_PASSWORD=your_secure_mongodb_password_here

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long_random_string

# Payment Providers
PAYSTACK_SECRET_KEY=sk_live_your_paystack_secret_key
FLUTTERWAVE_SECRET_KEY=FLWSECK-your_flutterwave_secret_key

# URLs
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:5000

# Optional: File Upload
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif
