# Server Configuration
PORT=8080
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/glotrade_ecom
# For production, use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/glotrade_ecom?retryWrites=true&w=majority

# CORS
CORS_ORIGIN=http://localhost:3000
# For production:
# CORS_ORIGIN=https://your-domain.vercel.app

# JWT Authentication
# Generate with: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long

# Payment Configuration
PAYMENTS_MODE=test
PLATFORM_FEE_BPS=200

# Paystack
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_WEBHOOK_SECRET=your_paystack_webhook_secret

# Flutterwave
FLW_DEBUG=true
USE_FLUTTERWAVE_OPAY=true
FLW_ACCESS_TOKEN=FLWSECK_TEST-your_flutterwave_access_token
FLW_BASE_URL=https://api.flutterwave.com
FLW_WEBHOOK_SECRET=your_flutterwave_webhook_secret
FLW_SECRET_KEY=your_flutterwave_secret_key

# Korapay
KORAPAY_SECRET_KEY=sk_test_your_korapay_secret_key
KORAPAY_PUBLIC_KEY=pk_test_your_korapay_public_key
KORAPAY_BASE_URL=https://api.korapay.com/merchant/api/v1
KORAPAY_DEBUG=false
KORAPAY_WEBHOOK_SECRET=your_korapay_webhook_secret

# Orange Money
ORANGE_MONEY_WEBHOOK_SECRET=your_orange_money_webhook_secret

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SERVICE=gmail
SMTP_SECURE=true
SMTP_REQUIRE_TLS=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM=AfriTrade Support <support@example.com>

# Application URLs
APP_ORIGIN=http://localhost:3000
# For production:
# APP_ORIGIN=https://your-domain.vercel.app

# Admin Configuration
ADMIN_EMAIL=admin@example.com

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your_r2_bucket_name
R2_PUBLIC_URL=https://your-public-domain.r2.dev
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif

# ================================
# Webhook URLs Configuration
# ================================
# Configure these URLs in each payment provider's dashboard:
# 
# Paystack: https://yourdomain.com/api/webhooks/paystack/payment-notification
# Flutterwave: https://yourdomain.com/api/webhooks/flutterwave/payment-notification
# Korapay: https://yourdomain.com/api/webhooks/korapay/payment-notification
# Orange Money: https://yourdomain.com/api/webhooks/orange-money/payment-notification

# ================================
# Sales Agent / Affiliate System
# ================================
# IMPORTANT: All monetary values are in NAIRA (not kobo)
# This matches the order system where totalPrice is stored in Naira

# Commission Rates
AGENT_REGISTRATION_BONUS=0
AGENT_PURCHASE_COMMISSION_PERCENT=2

# Tier Thresholds (number of referrals)
AGENT_TIER_BRONZE_MIN=0
AGENT_TIER_BRONZE_MAX=50
AGENT_TIER_SILVER_MIN=51
AGENT_TIER_SILVER_MAX=100
AGENT_TIER_GOLD_MIN=101

# Commission Approval
AGENT_AUTO_APPROVE_COMMISSIONS=true
AGENT_AUTO_APPROVE_MAX_AMOUNT=100000  # ₦100,000 in Naira

# Payout Settings
AGENT_MIN_PAYOUT_AMOUNT=500000  # ₦500,000 in Naira

# Agent Fees
AGENT_REGISTRATION_FEE=0
AGENT_MONTHLY_FEE=0

# ================================
# Distributor Rewards
# ================================
DISTRIBUTOR_REWARD_PERCENT=2
DISTRIBUTOR_REWARD_INTERVAL_MONTHS=3
